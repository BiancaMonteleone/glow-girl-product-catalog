<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>Glow Girl - Productos</title>
    <link rel="stylesheet" href="/products.css">
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <img id="logo-tienda" src="/img/icons/logo_tienda_light_icon.png" alt="Logo Tienda">
            </div>

            <div class="nombreAlumno">
                <p>Bianca Monteleone</p>
                <p>Fiorela Quipildor</p>
            </div>

            <div class="search-container">
                <input type="text" placeholder="Buscar..." class="search-bar">
                <img src="/img/icons/search_icon.png" alt="Buscar" class="icono-search">
            </div>

            <div class="iconos">
                <div class="usuario">
                    <img src="/img/icons/user_icon.png" alt="Usuario" class="icono" id="icono-usuario">
                    <div id="ventana-usuario" class="ventana-usuario oculto">
                        <p id="nombre-usuario">Nombre</p>
                        <button id="cerrar-sesion">Cerrar sesi√≥n</button>
                    </div>
                </div>
                <img src="/img/icons/light_mode_icon.png" alt="Cambiar modo" id="btn-mode" class="modo-icono">
            </div>
        </nav>
    </header>

    <main>
        <section class="products-section">
            <div class="product-grid">
                <% products.forEach(producto => { %>
                    <div class="product-card">
                        <img src="/<%= producto.img %>" alt="<%= producto.nombre %>">
                        <h3><%= producto.nombre %></h3>
                        <p><%=producto.descripcion %></p>
                        <strong>$<%= producto.precio.toLocaleString("es-AR") %></strong>

                        <div class="admin-buttons">
                            <a href="/admin/edit/<%= producto.id %>" class="btn-editar">Editar</a>
                            <button class="btn-desactivar" data-id="<%= producto.id %>" type="button">
                                <%= producto.activo ? 'Desactivar' : 'Activar' %>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <script src="/products.js"></script>
</body>

</html>
