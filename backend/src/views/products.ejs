<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>Glow Girl - Productos</title>
    <link rel="stylesheet" href="/css/products.css">
</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar">
            <div class="logo">
                <img id="logo-tienda" src="http://localhost:5000/img/icons/logo_tienda_light_icon.png">
            </div>

            <div class="nombreAlumno">
                <p>Bianca Monteleone</p>
                <p>Fiorela Quipildor</p>
            </div>

            <div class="search-container"> 
                <input type="text" placeholder="Buscar..." class="search-bar"> 
                <img src="http://localhost:5000/img/icons/search_icon.png" alt="Buscar" class="icono-search"> 
            </div>

            <a href="/api/admin/products/create">
                <button id="btn-gris">Crear producto</button>
            </a>

            <div class="iconos">
                <div class="usuario">
                    <img src="http://localhost:5000/img/icons/user_icon.png" alt="Usuario" class="icono" id="icono-usuario">
                    <div id="ventana-usuario" class="ventana-usuario oculto">
                        <p id="nombre-usuario">Nombre</p>
                        <button id="cerrar-sesion">Cerrar sesi√≥n</button>
                    </div>
                </div>
                <img src="http://localhost:5000/img/icons/light_mode_icon.png" alt="Cambiar modo" id="btn-mode" class="modo-icono">
            </div>
        </nav>
    </header>

    <main>
        <section class="products-section">
            <div class="product-grid">
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <img src="/<%= product.img %>" alt="<%= product.name %>">
                        <h3><%= product.name %></h3>
                        <p><%=product.description %></p>
                        <strong>$<%= product.price.toLocaleString("es-AR") %></strong>

                        <div class="admin-buttons">
                            <a href="/api/admin/products/update/<%= product.id %>">
                                <button id="btn-gris">Editar</button>
                            </a>
                            <button class="btn-desactivar" id="btn-rojo" data-id="<%= product.id %>" type="button">
                                <%= product.active ? 'Desactivar' : 'Activar' %>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <script src="/js/products.js"></script>
</body>

</html>
