<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>Glow Girl - Productos</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/products.css">
    <link rel="icon" type="image/png" href="/img/icons/logo_head_icon.png">
</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar">
            <div class="logo">
                <img id="store-logo" src="http://localhost:5000/img/icons/logo_tienda_light_icon.png">
            </div>

            <!-- FALTA ARREGLAR EL FILTRO -->
            <div class="search-container"> 
                <input type="text" placeholder="Buscar..." class="search-bar"> 
                <img src="http://localhost:5000/img/icons/search_icon.png" alt="Buscar" class="icon-search"> 
            </div>

            <a href="/api/admin/sales" class="btn">Ver ventas</a>

            <a href="/api/admin/products/create">
                <button id="btn-grey">Crear producto</button>
            </a>

            <div class="icons">
                <div class="user">
                    <img src="http://localhost:5000/img/icons/user_icon.png" alt="User" class="icon" id="user-icon">
                    <div id="user-window" class="user-window hidden">
                        <p id="user-name">Nombre</p>
                        <button id="log-out">Cerrar sesi√≥n</button>
                    </div>
                </div>
                <img src="http://localhost:5000/img/icons/light_mode_icon.png" alt="Change Mode" id="btn-mode" class="icon-mode">
            </div>
        </nav>
    </header>

    <main class="sales-container">
    <h1>Lista de Ventas</h1>

    <table class="sales-table">
        <thead>
        <tr>
            <th>ID Venta</th>
            <th>Comprador</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% sales.forEach((sale, index) => { %>
            <tr>
            <td><%= sale.id %></td>
            <td><%= sale.buyerName %></td>
            <td><%= new Date(sale.date).toLocaleDateString("es-AR") %></td>
            <td>$<%= sale.total.toLocaleString("es-AR") %></td>
            <td>
                <button class="toggle-details" data-index="<%= index %>">Mostrar detalles</button>
            </td>
            </tr>

            <tr class="details-row" id="details-<%= index %>" style="display: none;">
            <td colspan="5">
                <% sale.Products.forEach(product => { %>
                <p><%= product.name %> x<%= product.SalesDetail.count %> - $<%= (product.price * product.SalesDetail.count).toLocaleString("es-AR") %></p>
                <% }) %>
            </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    </main>
    
    <%- include('partials/footer.ejs') %>
    <script type="module" src="/js/products.js"></script>
</body>

</html>
