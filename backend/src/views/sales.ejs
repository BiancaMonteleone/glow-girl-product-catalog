<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ventas - Glow Girl Admin</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/sales.css">
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar">
            <div class="logo">
                <img class="store-logo" id="storeLogo" src="/img/icons/logo_tienda_light_icon.png">
            </div>

            <a href="/api/admin/catalog">
                <button class="btn-darkPink" id="btnGoBack">Volver al Catálogo</button>
            </a>

            <div class="icons">
                <div class="user">
                    <img src="http://localhost:5000/img/icons/user_icon.png" alt="User" class="icon" id="userIcon">
                    <div id="userWindow" class="user-window hidden">
                        <p id="userName">Nombre</p>
                        <button class="btn-red" id="logOut">Cerrar sesión</button>
                    </div>
                </div>
                <img src="http://localhost:5000/img/icons/light_mode_icon.png" alt="Change Mode" class="icon-mode" id="btnMode">
            </div>
        </nav>
    </header>
    <main class="sales-container">
        <h1>Lista de Ventas</h1>

        <% if (sales.length === 0) { %>
            <p>No hay ventas registradas.</p>
        <% } else { %>
            <table class="sales-table">
                <thead>
                    <tr>
                        <th>ID Venta</th>
                        <th>Comprador</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Detalles</th>
                    </tr>
                </thead>
                <tbody>
                    <% sales.forEach(sale => { %>
                        <tr>
                            <td><%= sale.id %></td>
                            <td><%= sale.buyerName %></td>
                            <td><%= new Date(sale.date).toLocaleDateString('es-AR') %></td>
                            <td>$<%= sale.total.toLocaleString('es-AR') %></td>
                            <td>
                                <button class="btn-pink" id="btnDetails" data-id="<%= sale.id %>">Mostrar detalles</button>
                            </td>
                        </tr>
                        <tr id="details-<%= sale.id %>" class="details-row hidden">
                            <td colspan="5">
                                <ul>
                                    <% sale.Products.forEach(product => { %>
                                        <li>
                                            <strong><%= product.name %></strong> x<%= product.SalesDetail.count %> 
                                            - $<%= (product.price * product.SalesDetail.count).toLocaleString('es-AR') %>
                                        </li>
                                    <% }) %>
                                </ul>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </main>

    <!-- Footer -->
    <%- include("partials/footer") %>
    <script type="module" src="/js/sales.js"></script>
</body>
</html>
