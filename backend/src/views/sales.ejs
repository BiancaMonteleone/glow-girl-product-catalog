<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ventas - Glow Girl Admin</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar">
            <div class="logo">
                <img id="store-logo" src="http://localhost:5000/img/icons/logo_tienda_light_icon.png">
            </div>

            <a href="/api/admin/catalog">
                <button id="btn-gold">Volver a productos</button>
            </a>

            <div class="icons">
                <div class="user">
                    <img src="http://localhost:5000/img/icons/user_icon.png" alt="User" class="icon" id="user-icon">
                    <div id="user-window" class="user-window hidden">
                        <p id="user-name">Nombre</p>
                        <button id="log-out">Cerrar sesi√≥n</button>
                    </div>
                </div>
                <img src="http://localhost:5000/img/icons/light_mode_icon.png" alt="Change Mode" id="btn-mode" class="icon-mode">
            </div>
        </nav>
    </header>
    <main class="sales-container">
        <h1>Lista de Ventas</h1>

        <% if (sales.length === 0) { %>
            <p>No hay ventas registradas.</p>
        <% } else { %>
            <table class="sales-table">
                <thead>
                    <tr>
                        <th>ID Venta</th>
                        <th>Comprador</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% sales.forEach(sale => { %>
                        <tr>
                            <td><%= sale.id %></td>
                            <td><%= sale.buyerName %></td>
                            <td><%= new Date(sale.date).toLocaleDateString('es-AR') %></td>
                            <td>$<%= sale.total.toLocaleString('es-AR') %></td>
                            <td>
                                <button class="btn-details" data-id="<%= sale.id %>">Mostrar detalles</button>
                            </td>
                        </tr>
                        <tr id="details-<%= sale.id %>" class="details-row hidden">
                            <td colspan="5">
                                <ul>
                                    <% sale.Products.forEach(product => { %>
                                        <li>
                                            <strong><%= product.name %></strong> x<%= product.SalesDetail.count %> 
                                            - $<%= (product.price * product.SalesDetail.count).toLocaleString('es-AR') %>
                                        </li>
                                    <% }) %>
                                </ul>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </main>

    <!-- Footer -->
    <%- include("partials/footer") %>
    <script type="module" src="/js/sales.js"></script>
</body>
</html>
